{
  "openapi": "3.0.0",
  "info": {
    "title": "Player Service",
    "version": "1.0.0",
    "description": "API to manage players"
  },
  "paths": {
    "/players": {
      "get": {
        "summary": "Get all players",
        "responses": {
          "200": {
            "description": "List of players"
          }
        }
      },
      "post": {
        "summary": "Create a new player",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Player"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Player created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Player": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "position": { "type": "string" },
          "number": { "type": "integer" }
        }
      }
    }
  }
}
